<h1>Listing sales</h1>

<table>
  <thead>
    <tr>
      <th>Seller user</th>
      <th>Buyer user</th>
      <th>Product</th>
      <th>Quantity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.seller_user %></td>
        <td><%= sale.buyer_user %></td>
        <td><%= sale.product %></td>
        <td><%= sale.quantity %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

